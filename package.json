{
  "name": "startar",
  "version": "1.0.0",
  "description": "EJS, Stylus, Browserify Boilerplate",
  "author": "deprode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deprode/startar"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "main": "gulpfile.js",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "cpx": "^1.5.0",
    "del-cli": "^0.2.1",
    "ejs": "^2.5.5",
    "ejs-cli": "^2.0.0",
    "exorcist": "^0.4.0",
    "imagemin-cli": "^3.0.0",
    "kouto-swiss": "^0.11.14",
    "licensify": "^3.0.1",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.0.1",
    "nunjucks-cli": "^0.5.0",
    "stylint": "^1.3.6",
    "stylus": "^0.54.2",
    "uglify-js": "^2.7.5",
    "watch-cli": "^0.2.1",
    "watchify": "^3.8.0"
  },
  "scripts": {
    "start": "npm-run-all -p serve watch",
    "build": "npm-run-all -p build:js build:css build:html",
    "build:html": "cpx 'src/html/*.{html,php}' dist/",
    "build:ejs": "ejs-cli '*.ejs' -b src/templates/ -O src/site.json -o dist",
    "build:css": "npm-run-all -s css:stylus css:prefix",
    "build:js": "browserify ./src/js/app.js -p [ licensify --includePrivate ] -d | exorcist dist/bundle.js.map | uglifyjs -c -m > dist/bundle.js --comments '/generated by licensify/'",
    "build:image": "imagemin src/images/*.{gif,jpg,jpeg,png,svg} --out-dir=dist/images",
    "css:stylus": "stylus -c -m --include-css src/stylus/app.styl -o ./dist/app.css",
    "css:prefix": "postcss --use autoprefixer dist/*.css -b 'last 2 versions' -d dist",
    "watch": "npm-run-all -p watch:html watch:css watch:js",
    "watch:html": "cpx -w 'src/html/*.{html,php}' dist/",
    "watch:ejs": "watch -p 'src/templates/*.ejs' -c 'npm run build:ejs'",
    "watch:css": "stylus -w --include-css ./src/stylus/app.styl -o ./dist/app.css",
    "watch:js": "watchify ./src/js/app.js -p [ licensify --includePrivate ] -o 'exorcist dist/bundle.js.map > dist/bundle.js' -d",
    "serve": "browser-sync start --server dist --files 'dist' --no-notify",
    "clean": "del dist/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
